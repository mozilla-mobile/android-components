{
  "name": "Squoosh",
  "short_name": "Squoosh",
  "start_url": "/",
  "display": "standalone",
  "orientation": "any",
  "background_color": "#ffffff",
  "theme_color": "#f78f21",
  "icons": [
    {
      "src": "/assets/icon-large.png",
      "type": "image/png",
      "sizes": "1024x1024"
    }
  ],
  "share_target": {
    "action": "/?share-target",
