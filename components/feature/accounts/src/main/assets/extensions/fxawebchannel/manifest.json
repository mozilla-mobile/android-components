{
  "manifest_version": 2,
  "name": "Mozilla Android Components - Firefox Accounts WebChannel",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://acounts.firefox.com/*", "https://*.dev.lcip.org/*"],
      "js": ["fxawebchannel.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "mozillaAddons",
    "geckoViewAddons",
    "nativeMessaging"
  ]
}
