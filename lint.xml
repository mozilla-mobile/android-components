<lint>
    <!-- Global lint configuration that will be applied to all projects by default -->
    <issue id="InvalidPackage">
        <!--
          All those libraries reference packages (like javax.*) that are not available on Android.
          We do not care much about that since the code we are calling is not expected to use those
          packages.
        -->
        <ignore path="**/bcprov-*on-*.jar"/>
        <ignore path="**/junit-*.jar"/>
        <ignore path="**/byte-buddy-agent-*.jar"/>
        <ignore path="**/bcprov-*on-*.jar"/>
        <ignore path="**/shadows-framework-*.jar"/>
        <ignore path="**/xstream-*.jar"/>
        <ignore path="**/resources-4.0-*.jar"/>
        <ignore path="**/kotlinx-coroutines-core-*.jar" />
    </issue>

    <!-- We do not want any app indexing.. -->
    <issue id="GoogleAppIndexingWarning" severity="ignore" />
</lint>
